bootloader --ptable=msdos

# oe-core kirkstone uses version 4.2 of mkfs.vfat and the FAT generated by
# this version of the command is incompatible with what the TI AM335x
# romcode expects. Passing the -a option is a workaround as described on
# https://bootlin.com/blog/workaround-for-creating-bootable-fat-partition-for-beagle-bone-am335x-on-recent-distros/

part   --size=64M --use-uuid --label=boot --fstype=vfat --source rootfs --rootfs-dir=${IMAGE_ROOTFS}/boot --active --mkfs-extraopts="-a -F 32"
part / --size=32M --use-uuid --label=root --fstype=ext4 --source rootfs --exclude-path=boot/
